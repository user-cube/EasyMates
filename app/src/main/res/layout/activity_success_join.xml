<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97FFFFFF"
    tools:context=".SuccessJoin">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="222dp"
        android:layout_height="199dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="292dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:text="Adicionado ao grupo com sucesso!! ComeÃ§a a gerir a tua casa!"
        android:textColor="#181818"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gestCasa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <Button
        android:id="@+id/gestCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9711D6F1"
        android:onClick="manageHouse"
        android:text="Gerir Casa"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />
</android.support.constraint.ConstraintLayout>